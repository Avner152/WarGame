<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/main_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dragon Ball WarGame"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/main_IMG_Wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_below="@id/main_LBL_title"
        android:src="@drawable/wallpaper"></ImageView>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_IMG_Wallpaper"

        >

        <Button
            android:id="@+id/main_BTN_GameStart"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Start Game"
            android:textAllCaps="false"
            android:textColor="#696969"
            android:textSize="20dp" />


        <Button
            android:id="@+id/main_BTN_Instruction"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Instructions"
            android:textAllCaps="false"
            android:textColor="#696969"

            android:textSize="20dp" />

        <Button
            android:id="@+id/main_BTN_Quit"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Quit"
            android:textAllCaps="false"
            android:textColor="#696969"
            android:textSize="20dp" />

    </GridLayout>


</RelativeLayout>
