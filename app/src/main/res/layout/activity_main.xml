<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acitivities.MainActivity"

    >
    <ImageView
        android:id="@+id/main_IMG_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        ></ImageView>
    <TextView
        android:id="@+id/main_LBL_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:shadowColor="@color/black"
        android:gravity="center"
        android:text="Dragon Ball WarGame"
        android:textColor="#f9aa33"
        android:textSize="40dp"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="10"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/main_IMG_Wallpaper"
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:alpha="0.55"
        android:layout_below="@id/main_LBL_title"
        android:src="@drawable/wallpaper">

    </ImageView>

    <GridLayout
        android:id="@+id/gl"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:backgroundTint="#C0C0C0"
        android:layout_below="@id/main_IMG_Wallpaper"
        >

        <Button
            android:id="@+id/main_BTN_GameStart"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Start Game"
            android:textAllCaps="false"
            android:textColor="#f9aa33"
            android:textSize="20dp" />


        <Button
            android:id="@+id/main_BTN_Instruction"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Instructions"
            android:textAllCaps="false"
            android:textColor="#f9aa33"
            android:textSize="20dp" />

        <Button
            android:id="@+id/main_BTN_Quit"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Quit"
            android:textAllCaps="false"
            android:textColor="#f9aa33"
            android:textSize="20dp" />


    </GridLayout>
    <Button
        android:id="@+id/main_BTN_Scores"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/gl"
        android:text="Scores"
        android:textAllCaps="false"
        android:textColor="#f9aa33"
        android:textSize="20dp"
         />
</RelativeLayout>
